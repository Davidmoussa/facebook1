                <!---Post Box  --->>
                <!--Section: Social news card-->
                <section class="pt-5 pb-3">

                    <!--Grid row-->
                    <div class="row">

                        <!--Grid column-->
                        <div class="col-md-6 col-lg-4">

                            <!--Card-->
                            <div class="card news-card">

                                <!--Heading-->
                                <div class="card-body card-block">
                                    <div class="content">
                                        <div class="right-side-meta">14 h</div>
                                        @if (item.ApplicationUser.userImage != null)
                                        {
                                            var base64 = Convert.ToBase64String(item.ApplicationUser.userImage);
                                            var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                            <img src="@imgSrc" class="rounded-circle avatar-img z-depth-1-half" alt="@item.ApplicationUser.UserName" /> @item.ApplicationUser.UserName
                                        }
                                        else
                                        {
                                            <img src="~/Content/Image User/UserImg.png" class="rounded-circle avatar-img z-depth-1-half" alt="@item.ApplicationUser.UserName" />@item.ApplicationUser.UserName
                                        }
                                    </div>
                                </div>

                                <!--Card image-->

                                @if (item.postImg != null)
                                {
                                    var base64 = Convert.ToBase64String(item.postImg);
                                    var imgSrc = String.Format("data:image/gif;base64,{0}", base64);
                                    <img src="@imgSrc" class="img-fluid no-radius" alt="@item.postDelete" />
                                }
                                <!--Card content-->
                                <div class="card-body card-block">

                                    <!--Social meta-->
                                    <div class="social-meta">
                                        <p> @item.postContent </p>
                                        <span>
                                            @Ajax.ActionLink(" ",actionName: "Create",controllerName: "Likes", ajaxOptions: new AjaxOptions() { HttpMethod = "GET", UpdateTargetId = "disPlayAllPost", InsertionMode = InsertionMode.Replace }, routeValues: new { postId = item.postId, @class = "fa fa-heart-o" });
